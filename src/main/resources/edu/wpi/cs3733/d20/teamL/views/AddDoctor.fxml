<BorderPane prefHeight="720.0" prefWidth="1080.0" styleClass="background" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.d20.teamL.views.controllers.AddDoctorController">
    <top>
      <HBox alignment="CENTER" styleClass="title-background" BorderPane.alignment="CENTER">
         <children>
              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="111.0" prefWidth="719.0" styleClass="title" text="Add a New Doctor" textFill="#0d2e57">
                  <font>
                      <Font name="System Bold" size="50.0" />
                  </font>
              </Label>
         </children>
      </HBox>
    </top>
    <bottom>
      <StackPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
               <children>
                      <JFXButton fx:id="btnCancel" buttonType="RAISED" onAction="#btnBackClicked" prefHeight="50.0" prefWidth="200.0" styleClass="cancel" text="Back" textAlignment="CENTER">
                          <font>
                              <Font size="24.0" />
                          </font>
                      </JFXButton>
                      <JFXButton fx:id="btnSubmit" buttonType="RAISED" onAction="#btnSubmitClicked" prefHeight="50.0" prefWidth="200.0" styleClass="confirm" text="Submit" textAlignment="CENTER" textFill="WHITE">
                          <font>
                              <Font size="24.0" />
                          </font>
                      </JFXButton>
               </children>
            </HBox>
                <Label fx:id="lblConfirmation" text="Doctor Added" StackPane.alignment="CENTER_RIGHT">
                    <font>
                        <Font size="16.0" />
                    </font>
               <padding>
                  <Insets right="100.0" />
               </padding>
                </Label>
         </children>
      </StackPane>
    </bottom>
    <center>
        <GridPane prefHeight="476.0" prefWidth="857.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="248.3999786376953" minHeight="10.0" prefHeight="162.0000213623047" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="315.99998779296874" minHeight="10.0" prefHeight="145.4" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="381.59995727539064" minHeight="10.0" prefHeight="177.8" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox GridPane.rowIndex="2">
                    <children>
                        <Label text="Email">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="emailText" prefHeight="40.0">
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </VBox>
                <VBox GridPane.columnIndex="1">
                    <children>
                        <Label text="Doctor ID">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="doctorIDText" prefHeight="40.0">
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </VBox>
                <VBox GridPane.rowIndex="1">
                    <children>
                        <Label text="Doctor Last Name ">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="lNameText" prefHeight="40.0">
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </VBox>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label text="Office Number">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="officeNumText" onKeyTyped="#autocomplete" prefHeight="40.0">
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </VBox>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <Label text="Additional Information">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="addInfoText" alignment="TOP_LEFT" prefHeight="100.0" prefWidth="368.0" styleClass="text-area">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Doctor First Name">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <JFXTextField fx:id="fNameText" prefHeight="40.0">
                            <padding>
                                <Insets left="10.0" right="10.0" />
                            </padding>
                        </JFXTextField>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </VBox>
            </children>
         <BorderPane.margin>
            <Insets left="100.0" right="100.0" top="50.0" />
         </BorderPane.margin>
        </GridPane>
    </center>
   <stylesheets>
      <URL value="@../css/GlobalStyles.css" />
      <URL value="@../css/FormStyles.css" />
      <URL value="@../css/ServiceRequestStyles.css" />
   </stylesheets>
</BorderPane>
