<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.cs3733.d20.teamL.views.controllers.requests.MedicationRequestController">
    <center>
        <HBox alignment="CENTER" prefHeight="568.0" prefWidth="1080.0" spacing="200.0">
            <children>
                <VBox prefHeight="562.0" prefWidth="380.0" spacing="50.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="35.0" prefWidth="416.0" text="Patient Information">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="patFNameText" labelFloat="true" minHeight="40.0" minWidth="300.0"
                                      prefHeight="40.0" prefWidth="300.0" promptText="Patient First Name"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets right="5.0"/>
                            </opaqueInsets>
                            <padding>
                                <Insets right="5.0"/>
                            </padding>
                        </JFXTextField>
                        <JFXTextField fx:id="patLNameText" labelFloat="true" prefHeight="40.0" prefWidth="300.0"
                                      promptText="Patient Last Name"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="roomNumText" labelFloat="true" prefHeight="40.0" prefWidth="300.0"
                                      promptText="  Room Number" onKeyTyped="#autocomplete"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="addInfoText" alignment="TOP_LEFT" prefHeight="149.0" prefWidth="380.0"
                                      promptText="  Additonal Information"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                        </JFXTextField>
                    </children>
                </VBox>
                <VBox prefHeight="562.0" prefWidth="380.0" spacing="50.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="35.0" prefWidth="452.0" text="Medication Information">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Label>
                        <JFXTextField fx:id="docFNameText" labelFloat="true" prefHeight="40.0" prefWidth="356.0"
                                      promptText="  Doctor First Name"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="docLNameText" labelFloat="true" prefHeight="40.0" prefWidth="300.0"
                                      promptText="Doctor Last Name"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="medTypeText" labelFloat="true" prefHeight="40.0" prefWidth="356.0"
                                      promptText="  Medication Type"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="doseText" labelFloat="true" prefHeight="40.0" prefWidth="356.0"
                                      promptText="  Dosage"
                                      style="-fx-border-color: #000000; -jfx-focus-color: #0D2e57; -fx-background-color: #ffffff;">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXTextField>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="109.0" prefWidth="677.0" text="Medication Request"
               textFill="#0d2e57" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="50.0"/>
            </font>
        </Label>
    </top>
    <bottom>
        <HBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="btnCancel" maxWidth="201.0" onAction="#btnCancelClicked" prefHeight="34.0"
                           prefWidth="146.0" style="-fx-background-color: #dfdfdc;" text="Back">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="btnSubmit" maxWidth="201.0" onAction="#btnSubmitClicked" prefHeight="49.0"
                           prefWidth="146.0" style="-fx-background-color: #0d2e57;" text="Submit" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI" size="24.0"/>
                    </font>
                </JFXButton>
                <Label fx:id="lblConfirmation" text="Medication Request Sent" visible="false">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0"/>
            </BorderPane.margin>
            <padding>
                <Insets left="275.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
